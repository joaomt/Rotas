<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.pharmamobi.joao.rotas.ActivityCadastro">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_cadastro"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/toolbar_round_corners"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SÃ³ vai levar alguns minutos."
        android:layout_margin="15dp"
        android:textSize="20sp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textColor="#3c3c3d"
                    android:visibility="invisible"
                    />
                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="E-mail:"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="5dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:background="@drawable/edit_text_login"
                    />
                <TextView
                    android:id="@+id/txt_info_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/txt_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome:"
                    android:textColor="#3c3c3d"
                    android:visibility="invisible"
                    />
                <EditText
                    android:id="@+id/edt_nome"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:drawableLeft="@drawable/ic_nome"
                    android:drawablePadding="5dp"
                    android:hint="Nome:"
                    android:text=""
                    android:background="@drawable/edit_text_login"/>
                <TextView
                    android:id="@+id/txt_info_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/txt_cpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPF"
                    android:textColor="#3c3c3d"
                    android:visibility="invisible"
                    />
                <EditText
                    android:id="@+id/edt_cpf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_cpf"
                    android:hint="Cpf:"
                    android:text=""
                    android:background="@drawable/edit_text_login"/>

                <TextView
                    android:id="@+id/txt_info_cpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/txt_senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senha:"
                    android:textColor="#3c3c3d"
                    android:visibility="invisible"
                    />
                <EditText
                    android:id="@+id/edt_senha"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Senha:"
                    android:drawableLeft="@drawable/ic_senha_ca"
                    android:drawablePadding="5dp"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_login"
                    />
                <TextView
                    android:id="@+id/txt_info_senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/txt_repita_senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repita a senha:"
                    android:textColor="#3c3c3d"
                    android:visibility="invisible"
                    />
                <EditText
                    android:id="@+id/edt_rept_senha"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Repita a senha:"
                    android:drawableLeft="@drawable/ic_senha_confir"
                    android:drawablePadding="5dp"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_login"
                    />
                <TextView
                    android:id="@+id/txt_info_repita_senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    />
                <Button
                    android:onClick="onClick"
                    android:id="@+id/btn_cadastrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toolbar_round_corners"
                    android:text="Cadastrar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:drawableRight="@drawable/ic_cadastro"
                    android:paddingRight="100dp"
                    android:drawablePadding="-100dp"

                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
