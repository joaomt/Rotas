<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_entregas_relacao_boy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pharmamobi.joao.rotas.activity.Activity_entregas_relacao_boy">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_entregas_relacao_boy"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:elevation="15dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"/>
    <TextView
        android:id="@+id/txt_total_entregas_name"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/tb_entregas_relacao_boy"
        android:text="Total de Entregas"
        android:textSize="20sp"
        android:textColor="#029c7d"/>
    <TextView
        android:id="@+id/txt_total_entregas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_total_entregas_name"
        android:layout_below="@+id/tb_entregas_relacao_boy"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_entregas_retornadas_name"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/txt_total_entregas"
        android:text="Entregas Retornadas"
        android:textSize="20sp"
        android:textColor="#029c7d"/>
    <TextView
        android:id="@+id/txt_entregas_retornadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_entregas_retornadas_name"
        android:layout_below="@+id/txt_total_entregas"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_entregas_aguardando_name"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/txt_entregas_retornadas"
        android:text="Entregas Aguardando"
        android:textSize="20sp"
        android:textColor="#029c7d"/>
    <TextView
        android:id="@+id/txt_entregas_aguardando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_entregas_retornadas"
        android:layout_toRightOf="@+id/txt_entregas_aguardando_name"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_total_relacao_name"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/txt_entregas_aguardando"
        android:text="Valor total Relação"
        android:textSize="20sp"
        android:textColor="#029c7d"/>
    <TextView
        android:id="@+id/txt_valor_total_relacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_entregas_aguardando"
        android:layout_toRightOf="@+id/txt_total_relacao_name"
        android:layout_marginLeft="10dp"
        android:text="00,00"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_total_recebido_name"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/txt_valor_total_relacao"
        android:text="Valor total Recebido"
        android:textSize="20sp"
        android:textColor="#029c7d"/>
    <TextView
        android:id="@+id/txt_valor_total_recebido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_valor_total_relacao"
        android:layout_toRightOf="@+id/txt_total_recebido_name"
        android:layout_marginLeft="10dp"
        android:text="00,00"
        android:textSize="20sp"/>
    <View
        android:id="@+id/v_linha_1_relacao"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/txt_valor_total_recebido"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/view_spacing"
        />
    <TextView
        android:id="@+id/txt_ent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/v_linha_1_relacao"
        android:text="Entregas"
        android:textSize="35sp"/>
    <ListView
        android:id="@+id/lv_entregas_relacao_boy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_ent"
        android:clickable="true"
        android:divider="#adb8c2"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:smoothScrollbar="true"/>
    <Button
        android:id="@+id/btn_iniciar_entregas"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="Iniciar Entregas"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:textSize="20sp"
        android:textAllCaps="false"/>
</RelativeLayout>
