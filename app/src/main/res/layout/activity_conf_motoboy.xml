<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_motoboy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686868"
    tools:context="com.pharmamobi.joao.rotas.activity.Activity_conf_motoboy">

    <TextView
        android:id="@+id/txt_temp_ajustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes"
        android:textColor="#feffff"
        android:layout_centerInParent="true"
        android:textSize="85sp"/>
    <LinearLayout
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_linha_boy"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home_boy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_relacao_boy_conf"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="@drawable/ic_moto1"

                />
            <!--android:backgroundTint="@color/colorPrimary"-->

            <TextView
                android:id="@+id/txt_relacao_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#343535"
                android:text="Entregas" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rotas_boy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_rotas_boy_conf"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:onClick="onClick"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_map1_boy"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txt_rotas_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#343535"
                android:text="Rotas" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_conf_boy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_conf_boy_conf"
                android:onClick="onClick"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_conf1_blue"/>

            <TextView
                android:id="@+id/txt_conf_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ajustes"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
