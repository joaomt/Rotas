<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e0e0"
    android:paddingRight="10dp"
    android:paddingStart="10dp"
    android:paddingTop="35dp"
    tools:context="com.pharmamobi.joao.rotas.FragmentOrcamentos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/shape_linha_sobre">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0095ff">

                <ImageView
                    android:id="@+id/rlv2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_triangulo"
                    android:rotation="270" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Informações sobre o projeto"
                    android:textColor="#fff"
                    android:textSize="22sp" />
            </RelativeLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_title"
                android:text="Sistema desenvolvido para agilizar e controlar os processos de entregas de fármacias de manipulação.\n Ao mesmo tempo trazendo conforto para o cliente. "
                android:textColor="#000"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_linha_sobre">

            <RelativeLayout
                android:id="@+id/rl_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0095ff">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_triangulo"
                    android:rotation="270" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Fundadores"
                    android:textColor="#fff"
                    android:textSize="22sp" />
            </RelativeLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_title2"
                android:text="João Vitor Cordeiro \n Leonardo Tavares Guimarães \n Luiz Henrique Marcelo"
                android:textSize="18sp"
                android:textColor="#000"
                />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
